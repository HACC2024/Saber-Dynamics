        android:layout_marginTop="160dp"
        android:layout_marginEnd="388dp"
        android:layout_marginBottom="80dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@drawable/tv_off" />

    <ImageButton
        android:id="@+id/washerDryerButton"
        android:layout_width="100dp"
