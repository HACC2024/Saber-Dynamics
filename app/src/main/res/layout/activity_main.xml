<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-14dp">

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="Money Per Second: "
        app:layout_constraintBottom_toTopOf="@+id/tvEnergy"
        app:layout_constraintEnd_toEndOf="@+id/tvEnergy" />

    <TextView
        android:id="@+id/tvEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Energy Per Second: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/house"
        android:layout_width="716dp"
        android:layout_height="315dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_house" />

    <ImageButton
        android:id="@+id/porchLightButton"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:layout_constraintVertical_bias="0.392"
        app:srcCompat="@drawable/porch_light_off" />

    <ImageButton
        android:id="@+id/acButton"
        android:layout_width="156dp"
        android:layout_height="68dp"
        android:layout_marginStart="191dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="126dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:layout_constraintVertical_bias="0.694"
        app:srcCompat="@drawable/ac_off" />

    <ImageButton
        android:id="@+id/ceilingLightButton"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_marginStart="487dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="189dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ceiling_light_off" />

    <ImageButton
        android:id="@+id/ceilingFanButton"
        android:layout_width="108dp"
        android:layout_height="62dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="169dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:srcCompat="@drawable/fan_off" />

    <ImageButton
        android:id="@+id/refrigeratorButton"
        android:layout_width="79dp"
        android:layout_height="124dp"
        android:layout_marginStart="436dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="19dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:srcCompat="@drawable/fridge_off" />

    <ImageButton
        android:id="@+id/ovenButton"
        android:layout_width="100dp"
        android:layout_height="89dp"
        android:layout_marginStart="515dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="19dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:srcCompat="@drawable/oven_off" />

    <ImageButton
        android:id="@+id/tvButton"
        android:layout_width="100dp"
        android:layout_height="59dp"
