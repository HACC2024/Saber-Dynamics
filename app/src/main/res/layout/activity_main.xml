        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/house"
        app:layout_constraintEnd_toEndOf="@+id/house"
        app:layout_constraintStart_toStartOf="@+id/house"
        app:layout_constraintTop_toTopOf="@+id/house"
        app:srcCompat="@drawable/washdry_off" />

    <ImageView
        android:id="@+id/gauge"
        android:layout_width="485dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gauge" />

    <ImageView
        android:id="@+id/green"
        android:layout_width="100dp"
        android:layout_height="62dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="566dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
